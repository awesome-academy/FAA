<%= simple_form_for resource, as: resource_name,
  url: registration_path(resource_name),
  html: {id: "sign-up-user", data: {type: "json"}, class: "hide-form"},
  remote: true do |f | %>
  <h3 class="text-center orange-text"><%= t ".signup" %></h3>
  <div class="clearfix alert-messages"></div>
  <div class="form-inputs">
    <%= f.input :name, required: true %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password, required: true %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.submit t(".signup"),
      class: "button button-3d button-amber nomargin" %>
  </div>

  <p><%= t ".have_account" %> 
    <a href="#" id="register-login-btn"><%= t ".signin_here" %></a>
  </p>
<% end %>
