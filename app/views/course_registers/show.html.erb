<div class="container show-successful-registration-wrapper">
  <div class="show-successful-registration-image">
    <%= image_tag asset_path("registration_success") %>
  </div>
  <div class="show-successful-registration-message">
    <h1><%= t ".thank_you" %></h1>
    <h3><%= t ".direction",
      course_name: @course_register.education_course.name %></h3>
  </div>
  <div class="show-successful-registration-button">
    <%= link_to t(".view_more_course"), education_courses_path,
      class: "button button-3d button-rounded button-green" %>
    <%= link_to t(".back_to_home").html_safe, root_path %>
  </div>
</div>
