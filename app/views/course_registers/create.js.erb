<% if flash[:success].present? %>
  $.growl.notice({message: '<%= flash[:success] %>'});
  window.location.href = '<%= course_register_path @course_register %>'
<% elsif flash[:danger].present? %>
  $.growl.error({message: '<%= flash[:danger] %>'});
  $('#course-register-modal').html('<%= j render partial: "education/courses/course_register_form", locals: {course_register: @course_register} %>');
  $('#course-register-modal').modal('show');
  $('#course_register_course_id').select2();
<% end %>
