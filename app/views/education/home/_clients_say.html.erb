<div class="section parallax dark nobottommargin clients-say-custom"
  data-stellar-background-ratio="0.4">
  <div class="heading-block center clients-say-title">
    <h3><%= t ".title" %></h3>
  </div>
  <div class="fslider testimonial testimonial-full" data-animation="fade" data-arrows="false">
    <div class="flexslider clients-say-slider">
      <div class="slider-wrap">
        <div class="slide clients-say-slide" data-thumb-alt="">
          <div class="testi-image">
            <a href="#">
              <img src="<%= Settings.education.home_page.client_img_3 %>" draggable="false">
            </a>
          </div>
          <div class="testi-content">
            <p><%= t ".client1_say" %></p>
            <div class="testi-meta">
              <%= t ".client1_name" %>
              <span><%= t ".client1_company" %></span>
            </div>
          </div>
        </div>
        <div class="slide flex-active-slide clients-say-slide" data-thumb-alt="">
          <div class="testi-image">
            <a href="#">
              <img src="<%= Settings.education.home_page.client_img_2 %>" draggable="false"></a>
          </div>
          <div class="testi-content">
            <p><%= t ".client2_say" %></p>
            <div class="testi-meta">
              <%= t ".client2_name" %>
              <span><%= t ".client2_company" %></span>
            </div>
          </div>
        </div>
        <div class="slide clients-say-slide" data-thumb-alt="">
          <div class="testi-image">
            <a href="#">
              <img src="<%= Settings.education.home_page.client_img_1 %>" draggable="false"></a>
          </div>
          <div class="testi-content">
            <p><%= t ".client3_say" %></p>
            <div class="testi-meta">
              <%= t ".client3_name" %>
              <span><%= t ".client3_company" %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
