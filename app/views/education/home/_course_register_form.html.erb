<div class="modal-dialog modal-lg">
  <%= simple_form_for course_register, remote: true do |f| %>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".heading" %></h4>
      </div>
      <div class="modal-body">
        <div class="col_full">
          <%= f.input :course_id, collection: courses_select_options,
            as: :select, class: "sm-form-control" %>
        </div>
        <div class="col_half">
          <%= f.input :name, error_class: :error,
            input_html: {value: current_user.present? ? current_user.name : course_register.name,
              class: "sm-form-control"} %>
        </div>
        <div class="col_half col_last">
          <%= f.input :email, error_class: :error,
            input_html: {value: current_user.present? ? current_user.email : course_register.email,
              class: "sm-form-control"} %>
        </div>
        <div class="clear"></div>
        <div class="col_half">
          <%= f.input :phone_number, error_class: :error,
            class: "sm-form-control" %>
        </div>
        <div class="col_half col_last">
          <%= f.input :address, error_class: :error,
            class: "sm-form-control" %>
        </div>
        <div class="clear"></div>
      </div>
      <div class="modal-footer">
        <%= f.submit t(".submit"), class: "button button-3d button-amber nomargin" %>
        <button type="button" class="button button-3d button-rounded button-white button-light" data-dismiss="modal">
          <%= t ".close" %></button>
      </div>
    </div>
  <% end %>
</div>
