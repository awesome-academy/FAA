<% courses.each do |course| %>
  <div class="col-md-3 col-sm-6 col-xs-12">
    <div class="index-course-image">
      <%= link_to education_course_path(course), class: "center-icon" do %>
        <%= load_image course %>
      <% end %>
    </div>
    <div class="index-course-details">
      <h4><%= course.name %></h4>
      <p><%= l course.start_date, format: :date_month_year %> -
        <%= l course.end_date, format: :date_month_year %></p>
      <h5><%= number_to_currency(course.cost, unit: "VND", precision: 0, delimiter: ".") %></h5>
    </div>
  </div>
<% end %>
