<div id="page-menu">
  <div id="page-menu-wrap">
    <div class="container clearfix">
      <div class="menu-title">
        <%= t "education.header.project" %>
        <span> <%= t "education.projects.home.filter" %></span>
      </div>
      <nav>
        <ul>
          <%= render "education/layouts/nav_filter",
            {controller_name: "education/management/projects", techniques: @techniques} %>
          <li class="project-search">
            <input type="text" id="projects-search-txt" class="form-control"
              placeholder= "<%= t ".placeholder_search" %>" autofocus>
          </li>
        </ul>
      </nav>
      <div id="page-submenu-trigger"><i class="icon-reorder"></i></div>
    </div>
  </div>
</div>
<div class="content-wrap nobottompadding custom-wrap">
  <div id="list-portfolio" class="container clearfix">
    <div id="portfolio" class="portfolio grid-container clearfix">
      <%= render "education/trainers/new_project" %>
      <%= render partial: "education/trainers/project",
        collection: @projects %>
    </div>
  </div>
</div>
<div class="center">
  <%= paginate @projects %>
</div>
<div class="project-search">
  <div class="results" id="projects-search-results"></div>
</div>
