<div class="mpost clearfix">
  <div class="entry-image">
    <%= link_to load_cover_photo(recruitment), "#" %>
  </div>
  <div class="entry-c">
    <div class="entry-title">
      <h4>
        <%= link_to education_recruitment_path(recruitment) do %>
          <%= recruitment.title %>
        <% end %>
      </h4>
    </div>
    <ul class="entry-meta clearfix">
      <li><i class="icon-calendar3"></i>
        <%= recruitment.created_at.to_formatted_s :long_ordinal %>
      </li>
      <li>
        <%= link_to "#" do %>
          <i class="icon-comments"></i><%= recruitment.comments_count %>
        <% end %>
      </li>
    </ul>
    <div class="entry-content">
      <%= truncate recruitment.content %>
    </div>
  </div>
</div>
