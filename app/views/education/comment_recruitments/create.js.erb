<% if @comment.errors.any? %>
  $('.comment-errors').html('<%= j render "shared/error_messages", object: @comment %>')
  $('.sm-form-control').val('');
<% else %>
  $('.commentlist').html('<%= j render partial: "education/recruitments/comment_item", locals: {comments: @comments} %>');
  $('.sm-form-control').val('');
  $('.comments-count').html('<%= @recruitment.comments_count %>')
  $('.comment-errors').html('')
<% end %>
