<h4><%= t ".title" %></h4>
<%= form_for @user, url: education_management_users_path do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: t(".name"),
      required: true %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: t(".email"),
      required: true %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: "form-control",
      placeholder: t(".password"), required: true %>
  </div>
  <%= f.submit t(".submit"), class: "btn btn-primary" %>
<% end %>
