<%= provide :title, t(".title") %>

<section id="page-title" class="edu-managment-page-title">
  <div class="container clearfix">
    <h1><%= t ".title" %></h1>
    <span><%= t ".title_description" %></span>
  </div>
</section>

<section class="course-content">
  <div class="container clearfix">
    <div class="search-form-course row">
      <div class="col-md-4">
        <%= render "filter_course_form" %>
      </div>
      <div class="col-md-4">
        <%= render "filter_form" %>
      </div>
      <div class="col-md-4">
        <%= render "search_form" %>
      </div>
    </div>
    <div class="table-responsive" id="list_course_register">
      <%= render "list_course_register", course_registers: @course_registers %>
    </div>
  </div>
</section>

<%= javascript_include_tag "education/management/course_registers" %>
