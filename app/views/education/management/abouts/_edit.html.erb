<div class="modal fade" id="modal_about" tabindex="-1";
  aria-labelledby="modal_label_message" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close"
          data-dismiss="modal" aria-hidden="true">&times</button>
        <h4 class="modal-title" id="modal_label_message">
          <%= t ".title" %>
        </h4>
      </div>
      <%= simple_form_for about, url: education_management_about_path(about) do |f| %>
        <div class="form-group">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.input :title,
                input_html: {class: "form-control margin-bot-10",
                  "data-validation": "required"} %>
              <%= f.input :content, as: :text,
                input_html: {class: "form-control margin-bot-10 content-about-us",
                  "data-validation": "required"} %>
              <%= f.fields_for :image do |i| %>
                <%= i.file_field :url %>
              <% end %>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.submit t(".save"), method: :create, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
