<tr>
  <td>
    <% if course.images.any? %>
      <%= image_tag course.images.first.url, class: "img-circle" %>
    <% else %>
      <%= image_tag ImageUploader.new.default_url, class: "img-circle" %>
    <% end %>
  </td>
  <td>
    <h4>
      <b><%= course.name %></b>
    </h4>
    <p><%= course.training.name %></p>
  </td>
  <td><%= course.schedule %></td>
  <td><%= l course.start_date, format: :date_month_year_concise %></td>
  <td><%= course.place %></td>
  <td><%= l course.deadline_register, format: :date_month_year_concise %></td>
  <td><%= course.cost %></td>
  <td align="center">
    <% if current_user && can_manage?(Education::Course) %>
      <%= link_to edit_education_course_path(course),
        class: "btn btn-default btn-course-edit" do %>
        <em class="icon-pencil"></em>
      <% end %>
      <%= link_to education_course_path(course), method: :delete,
        class: "btn btn-danger", data: {confirm: t(".delete_confirm")} do %>
        <em class="icon-trash"></em>
      <% end %>
    <% else%>
      <%= link_to new_course_register_path(course: course.id),
        class: "button button-rounded button-reveal button-large button-yellow button-light" do %>
        <i class="icon-ok"></i>
        <span><%= t ".register" %></span>
      <% end %>
    <% end %>
  </td>
</tr>
