<% provide :title, t(".page_title") %>

<section id="page-title">
  <div class="container clearfix">
    <h1><%= t ".page_title" %></h1>
  </div>
</section>

<div class="clear bottommargin-sm"></div>
<div class="container">
  <div class="row">
    <div class="panel panel-default panel-table">
      <div class="panel-heading">
        <div class="row">
          <div class="col col-xs-6">
            <h3 class="panel-title"><%= t ".all_course" %></h3>
          </div>
        </div>
      </div>
      <div class="panel-body nopadding">
        <table class="table table-hover table-striped nomargin">
          <thead>
            <tr class="warning">
            <th></th>
            <th><%= t ".course_name" %></th>
            <th><%= t ".start_date" %></th>
            <th><%= t ".end_date" %></th>
            <th><%= t ".place" %></th>
            <th><%= t ".deadline_register" %></th>
            <th><%= t ".cost" %></th>
            <th class="text-center"><em class="icon-cog"></em></th>
            </tr>
          </thead>
          <tbody class="tbody-course">
            <%= render @courses %>
          </tbody>
        </table>
      </div>
      <div class="panel-footer">
        <div class="row">
          <div class="center">
            <%= paginate @courses %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="render-form-register"></div>

<%= render "education/shared/edit_popup",
  modal_title: t("education.courses.edit.edit") %>
