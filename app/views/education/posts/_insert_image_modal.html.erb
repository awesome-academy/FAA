<div id="image_insert_dialog" data-dialog="image" aria-hidden="true"
  class="modal fade image-insert-modal">
  <div role="document" class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" data-dismiss="modal" aria-label="Close"
          class="close">
          <span aria-hidden="true">Ã—</span></button>
          <h5 class="modal-title"><%= t ".modal_header" %></h5>
      </div>
      <div class="modal-body">
        <%= form_tag @user_image_object.new_image , id: "dropzone" do %>
          <div class="dz-default dz-message"><span>
            <i class="fa fa-cloud-upload fa-3x" aria-hidden="true"></i>
            <br><%= t ".dropzone_hint" %></span>
          </div>
        <% end %>
        <div id="preview-template" style="display: none;"></div>
        <div class="row mt-1">
          <% if @user_image_object.user_education_images.any? %>
            <%= render partial: "user_images",
              locals: {images: @user_image_object.user_education_images} %>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-default">
          <%= t ".cancel" %>
        </button>
      </div>
    </div>
  </div>
</div>
