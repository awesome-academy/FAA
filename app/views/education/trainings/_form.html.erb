<div class="row">
  <div class="col-xs-8 col-md-8 col-md-offset-2">
    <%= simple_form_for training do |f| %>
      <%= f.input :name, label: t(".name"), class: "form-control" %>
      <%= f.input :description, as: :text, label: t(".description"),
        class: "form-control",
        input_html: {rows: Settings.education.trainings.description_rows} %>

      <div class="form-group">
        <%= f.input :usage, as: :text, label: t(".usage"),
          input_html: {rows: Settings.education.trainings.textarea_rows,
            class: "form-control"} %>
      </div>
      <div class="form-group">
        <%= f.input :reason, as: :text, label: t(".reason"),
          input_html: {rows: Settings.education.trainings.textarea_rows,
            class: "form-control"} %>
      </div>
      <%= f.input :learner, label: t(".learner"), class: "form-control" %>
      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-3 left-field">
            <%= f.input :duration, as: :integer %>
          </div>
          <div class="col-md-3 right-field courses-duration">
            <h5><%= t(".days") %></h5>
          </div>
          <div class="col-md-5">
            <%= f.input :cost, as: :integer %>
          </div>
          <div class="col-md-1 courses-duration">
            <h5><%= t(".vnd") %></h5>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.input :benefit, as: :text, label: t(".benefit"),
          input_html: {rows: Settings.education.trainings.textarea_rows,
            class: "form-control"} %>
      </div>
      <%= f.label t ".choose_technique" %>
      <div class="form-choose-technique">
        <%= render "education/shared/choose_technique", object: training %>
      </div>

      <%= f.simple_fields_for :images do |image| %>
        <%= render "image_fields", f: image %>
      <% end %>
      <div class="new-added-images">
      </div>
      <div class="links">
        <%= link_to_add_association t(".add_image"), f, :images,
          class: "button button-3d button-small button-rounded button-green",
          data: {"association-insertion-node": ".new-added-images"} %>
      </div>
      <%= f.submit button_text,
        class: "button button-3d button-rounded button-amber pull-right" %>
    <% end %>
  </div>
</div>
